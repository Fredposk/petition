
<h1>This is the account page</h1>

<label for="fname" >First name:</label><br>
  <input  type="text" class="formElement" id="fname" name="firstName"><br>
  <label for="lname">Last Name:</label><br>
  <input  type="text" class="formElement" id="lname" name="lastName"> <br>
    <label for="email">Email:</label><br>
  <input class="formElement" type="email" id="email" name="email"><br>
  <label for="password">Password:</label><br>
  <input placeholder="min. 6 characters" class="formElement" type="password" id="password" name="password"> <br>

<form method="post" >
  <label for="age">Age:</label><br>
  <input  type="number" class="formElement" id="age" name="age"><br>
  <label for="City" >City:</label><br>
  <input  type="text" class="formElement" id="city" name="city"><br>
    <label for="homepage">Home Page:</label><br>
  <input class="formElement" type="url" id="url" name="url"><br>
 <br>
   <input type="hidden" name="_csrf" value="{{csrfToken}}">
<br>


<button type="submit" class="px-2 py-1 mt-3 text-sm tracking-wide text-gray-300 uppercase transition duration-500 bg-gray-500 border-2 border-gray-500 rounded shadow hover:bg-gray-700 hover:shadow-2xl hover:text-gray-400"
>Save</button>


</form>


<a href="/delete" class="px-2 py-1 mt-3 text-sm tracking-wide text-gray-100 uppercase transition duration-500 bg-red-400 border-2 border-red-400 rounded shadow hover:bg-red-700 hover:shadow-2xl hover:text-red-400"
>DELETE</a>




{{#if hasDBErrors}}
 <div class="flex flex-col justify-center mt-12">
  <ul class="errorEl">
    <li>{{errors}}</li>
{{/if}}
  </ul>
</div>

<img src="/Illustration.svg" >
</div>
