
<h1 class="mb-2 text-sm font-bold leading-5 text-center text-gray-800 uppercase">{{userAccountDetails.first}}'s account page</h1>


<form method="post" class="relative">
<label for="fname" >First name:</label><br>
  <input  type="text" class="formElement" id="fname" name="firstName" value="{{userAccountDetails.first}}"><br>
  <label for="lname">Last Name:</label><br>
  <input  type="text" class="formElement" value="{{userAccountDetails.last}}" id="lname" name="lastName"> <br>
    <label for="email">Email:</label><br>
  <input class="formElement" value="{{userAccountDetails.email}}" type="email" id="email" name="email"><br>
  <label for="password">Password:</label><br>
  <input placeholder="******" class="formElement" type="password" id="password" name="password"> <br>
  <label for="age">Age:</label><br>
  <input  value="{{userAccountDetails.age}}" type="number" class="formElement" id="age" name="age"><br>
  <label for="City" >City:</label><br>
  <input value="{{userAccountDetails.city}}"  type="text" class="formElement" id="city" name="city"><br>
    <label for="homepage">Home Page:</label><br>
  <input value="{{userAccountDetails.url}}" class="formElement" type="url" id="url" name="url"><br>
 <br>
   <input type="hidden" name="_csrf" value="{{csrfToken}}">
<div class="text-center">
<button type="submit" class="px-3 py-1 mt-2 text-sm tracking-wide text-gray-300 uppercase transition duration-500 bg-gray-500 border-2 border-gray-500 rounded shadow hover:bg-gray-700 hover:shadow-2xl hover:text-gray-400"
>Save</button></div>
</form>

<a href="/delete" class="warningBtn"
>DELETE account</a>
<a href="/thanks" class="warningBtn"
>DELETE Signature</a>

{{#if isUpdated}}
</div>
 <div class="flex flex-col items-center justify-center mt-12">
  <ul class="errorEl">
    <li>{{updateMsg}}</li>
{{/if}}
  </ul>
</div>

